<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Jobcard.Views.Details.AddLocation">
    <StackLayout>
        <Label x:Name="lbl_NoInternet" HorizontalTextAlignment="Center" TextColor="White" BackgroundColor="Red"/>
        <ActivityIndicator x:Name="ActivitySpinner" Color="LightBlue" IsRunning="True"/>


        <Label x:Name="lblClient" Text="Client" FontSize="Medium" FontAttributes="Bold"/>
        <Picker x:Name="pickClient" Title="Select Client"/>

        <Label x:Name="lblAddress" Text="Address" FontSize="Medium" FontAttributes="Bold"/>
        <Entry x:Name ="edtAddress" Placeholder="Address"/>

        <Label x:Name="lblCoordinates" Text="Coordinates" FontSize="Medium" FontAttributes="Bold"/>
        <Entry x:Name ="edtCoord" Placeholder="Coordinates" Completed="EdtCoord_Completed"/>

        <Button x:Name ="btnAddLocation" Text="ADD LOCATION" Clicked="BtnAddLocation_Clicked" TextColor="White"/>
    </StackLayout>
</ContentPage>